<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_color"
    android:fitsSystemWindows="true">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/oled_black_elevated"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DHCP Spoofing"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Configure DHCP spoofing options"
                android:textSize="14sp"
                android:textColor="@color/text_secondary" />
        </LinearLayout>
    </LinearLayout>

    <!-- Main Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <!-- Start DHCP Spoofing Button -->
            <Button
                android:id="@+id/startDhcpSpoofButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Start DHCP Spoofing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:textColor="@color/oled_black"
                android:layout_marginBottom="16dp" />

            <!-- Stop DHCP Spoofing Button -->
            <Button
                android:id="@+id/stopDhcpSpoofButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Stop DHCP Spoofing"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:textColor="@color/oled_black"
                android:layout_marginBottom="16dp" />

            <!-- Add DHCP Rule Button -->
            <Button
                android:id="@+id/addDhcpRuleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Add DHCP Rule"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:textColor="@color/oled_black"
                android:layout_marginBottom="16dp" />

            <!-- Remove DHCP Rule Button -->
            <Button
                android:id="@+id/removeDhcpRuleButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Remove DHCP Rule"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:textColor="@color/oled_black"
                android:layout_marginBottom="16dp" />

            <!-- Check Status Button -->
            <Button
                android:id="@+id/checkDhcpStatusButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check DHCP Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/button_background"
                android:textColor="@color/oled_black" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>